<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:gravity="center_horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@id/tools_top_container" android:background="@drawable/toolbar_bg" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <LinearLayout android:gravity="center" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1.0">
            <ImageButton android:id="@id/tool_up" android:background="@drawable/background_globle_buttons" android:focusable="true" android:layout_width="fill_parent" android:layout_height="fill_parent" android:src="@drawable/toolbar_return" />
        </LinearLayout>
        <LinearLayout android:gravity="center" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1.0">
            <ImageButton android:id="@id/tool_history_button" android:background="@drawable/background_globle_buttons" android:focusable="true" android:layout_width="fill_parent" android:layout_height="fill_parent" android:src="@drawable/toolbar_history" />
        </LinearLayout>
        <LinearLayout android:gravity="center" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1.0">
            <com.estrongs.android.pop.esclasses.ESImageView android:id="@id/tool_fast_access" android:background="@drawable/background_globle_buttons" android:focusable="true" android:layout_width="fill_parent" android:layout_height="fill_parent" android:src="@drawable/main_addressbar_access_icon" android:scaleType="centerInside" />
        </LinearLayout>
        <LinearLayout android:gravity="center" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1.0">
            <com.estrongs.android.pop.esclasses.ESImageView android:id="@id/tool_multi_window" android:background="@drawable/background_globle_buttons" android:focusable="true" android:layout_width="fill_parent" android:layout_height="fill_parent" android:src="@drawable/main_addressbar_close_icon" android:scaleType="centerInside" />
        </LinearLayout>
    </LinearLayout>
    <include android:layout_width="fill_parent" android:layout_height="fill_parent" layout="@layout/select_bar" />
</RelativeLayout>